{
  "name": "@jtmdias/a11y-site-checker",
  "version": "0.0.0",
  "description": "A tool perform accessibility testing and reports",
  "private": false,
  "type": "module",
  "main": "./dist/a11y-page-checker.cjs",
  "module": "./dist/a11y-page-checker.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "bin": {
    "a11y-page-checker": "./bin/run.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build",
    "test": "vitest",
    "crawl-example": "tsx ./examples/node-script/index.ts",
    "test:example:node-script": "start-server-and-test dev http://localhost:5173 crawl-example",
    "test:coverage": "vitest run --coverage",
    "test:integration": "TEST_SITE_URL=https://example.com vitest integration",
    "bundle-visualizer": "vite-bundle-visualizer"
  },
  "keywords": [
    "accessibility",
    "sitemap",
    "crawler",
    "axe-core",
    "playwright",
    "a11y"
  ],
  "dependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@oclif/core": "^4.2.0",
    "@oclif/plugin-help": "^6.2.20",
    "@oclif/plugin-plugins": "^5.4.23",
    "commander": "^12.1.0",
    "handlebars": "^4.7.8",
    "xml2js": "^0.6.2",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^22.10.2",
    "@types/xml2js": "^0.4.14",
    "@vitest/coverage-v8": "^2.1.8",
    "chalk": "^5.4.0",
    "path": "^0.12.7",
    "start-server-and-test": "^2.0.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "url": "^0.11.4",
    "vite": "^6.0.5",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-dts": "^4.4.0",
    "vite-plugin-static-copy": "^2.2.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "oclif": {
    "bin": "a11y-page-checker",
    "dirname": "a11y-page-checker",
    "commands": "./dist/cli/commands",
    "plugins": [],
    "topicSeparator": " ",
    "topics": {
      "audit": {
        "description": "Run accessibility audits"
      }
    }
  }
}
